@model List<eTickets.Models.Domain.Actor>
@{
	ViewData["Title"] = "List Of Actors";
}

<div class="row">
	<div class="col-md-8 offset-md-2">

		<table class="table">
			<thead>
				<tr>
					<th>Profile Picture</th>
					<th>Full Name</th>
					<th>Bio</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var actor in Model)
				{
					<tr>
						<td class= "align-middle"><img class="rounded-circle" src="@actor.ProfilePictureURL" alt="@actor.FullName" style="max-width: 150px;max-height: 150px" /></td>
						<td class= "align-middle">@actor.FullName</td>
						<td class="align-middle"> @actor.Bio</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary" href="#"><i class="bi bi-pencil-square"></i>Edit</a>
							<a class="btn btn-outline-info" href="#"><i class="bi bi--eye"></i>Details</a>
							<a class="btn btn-danger" href="#"><i class="bi bi-trash"></i>Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>
</div>