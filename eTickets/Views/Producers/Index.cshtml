@model List<eTickets.Models.Domain.Producer>
@{
	ViewData["Title"] = "List Of Producers";
}


<div class="row">
	<div class="col-md-8 offset-md-2">
		<div class="table-responsive">
			<table class="table table-condensed">
				<thead>
					<tr class="text-center">
						<th >@Html.DisplayNameFor(producer => producer[0].ProfilePictureURL)</th>
						<th >@Html.DisplayNameFor(producer => producer[0].FullName)</th>
						<th style="width: 30%">@Html.DisplayNameFor(producer => producer[0].Bio)</th>
						<th >Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var producer in Model)
					{
						<tr>
							<td class="align-middle"><img class="rounded-circle" src="@producer.ProfilePictureURL" alt="@producer.FullName" style="max-width: 150px;height: 150px" /></td>
							<td class="align-middle">@producer.FullName</td>
							<td class="align-middle"> <span class="truncate-2-lines">@Html.Raw(producer.Bio)</span> </td>
							<td class="align-middle" >
								<a class="btn btn-outline-primary mb-2" href="#"><i class="bi bi-pencil-square"></i>Edit</a>
								<a class="btn btn-outline-info mb-2" href="#"><i class="bi bi-eye"></i>Details</a>
								<a class="btn btn-danger mb-2" href="#"><i class="bi bi-trash"></i>Delete</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
<div style="position:fixed;bottom:1em;right:1em" class="text-white">
	<a asp-action="Create" asp-controller="Producers" class="btn btn-success">
		<i class="bi bi-plus-circle"></i> Add New
	</a>
</div>