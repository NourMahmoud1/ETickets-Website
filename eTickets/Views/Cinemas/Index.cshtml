@model List<eTickets.Models.Domain.Cinema>

@{
	ViewData["Title"] = "List Of Cinemas";
}


<div class="row">
	<div class="col-md-8 offset-md-2">

		<table class="table">
			<thead>
				<tr class="text-center">
					<th>@Html.DisplayNameFor( c => c[0].Logo)</th>
					<th>@Html.DisplayNameFor( c => c[0].Name)</th>
					<th>@Html.DisplayNameFor( c => c[0].Description)</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var cinema in Model)
				{
					<tr>
						<td class="align-middle"><img class="rounded-circle" src="@cinema.Logo" alt="@cinema.Name" style="max-width: 150px;height: 150px" /></td>
						<td class="align-middle">@cinema.Name</td>
						<td class="align-middle"> @cinema.Description</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary mb-2" href="#"><i class="bi bi-pencil-square"></i>Edit</a>
							<a class="btn btn-outline-info mb-2" href="#"><i class="bi bi--eye"></i>Details</a>
							<a class="btn btn-danger mb-2" href="#"><i class="bi bi-trash"></i>Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>
</div>
